model User {
  id          Int          @id @default(autoincrement())
  type        UserTypeEnum
  username    String       @unique
  email       String       @unique
  phoneNumber String       @unique
  firstName   String?
  lastName    String?
  reviews     Review[]
  background  String?
  score       Float?
  requests    Request[]
  schedules   Schedule[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Review {
  id        Int      @id @default(autoincrement())
  review    String?
  score     Float
  doctor    User     @relation(fields: [doctorId], references: [id])
  doctorId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Request {
  id             Int             @id @default(autoincrement())
  description    String?
  price          Float
  meetingType    MeetingTypeEnum
  location       String?
  startTime      DateTime
  finishTime     DateTime
  patience       User            @relation(fields: [patienceId], references: [id])
  patienceId     Int
  doctorTimeslot DoctorTimeslot?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

model Schedule {
  id        Int              @id @default(autoincrement())
  doctor    User             @relation(fields: [doctorId], references: [id])
  doctorId  Int
  info      String?
  timeslots DoctorTimeslot[]
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
}

model DoctorTimeslot {
  id         Int      @id @default(autoincrement())
  request    Request? @relation(fields: [requestId], references: [id])
  requestId  Int?     @unique
  schedule   Schedule @relation(fields: [scheduleId], references: [id])
  scheduleId Int
  startTime  DateTime
  finishTIme DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

enum MeetingTypeEnum {
  ONLINE
  OFFLINE
}

enum UserTypeEnum {
  USER
  DOCTOR
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_BEDLENDULE")
}
